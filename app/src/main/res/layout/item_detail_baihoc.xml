<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/layout_padding_10"
        android:paddingLeft="@dimen/layout_padding_5"
        android:paddingRight="@dimen/layout_padding_5"
        android:paddingBottom="@dimen/layout_padding_15"
        android:textSize="@dimen/title_size_20"
        android:textColor="@color/md_red"
        android:text="abcdef"/>

    <TextView
        android:id="@+id/text_view_noidung_monhoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/layout_padding_10"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textSize="@dimen/title_size_20"/>

    <TextView
        android:id="@+id/text_view_noidung_congthuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/layout_padding_10"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textSize="@dimen/title_size_20"/>
</LinearLayout>
